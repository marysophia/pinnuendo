<%= render 'home/jumbo' unless user_signed_in? %>

<div id="pins" class="transitions-enabled masonry">
  <% @pins.each do |pin| %>

    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
      <%= pin.description %><br/>
      <%= pin.user.name if pin.user %><br/>
    
      <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin) %>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'You sure about that?' } %>
      <% end %>
    </div>
  
  <% end %>
</div>
